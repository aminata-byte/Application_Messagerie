<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #0d0d1a;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.application_messagerie.client.controller.DiscussionController">
    <children>
        <HBox prefHeight="600.0" prefWidth="900.0">
            <children>

                <!-- VBox GAUCHE -->
                <VBox maxWidth="250.0" minWidth="250.0" prefWidth="250.0" spacing="10.0" style="-fx-background-color: #1a1a2e;">
                    <children>
                        <Label style="-fx-text-fill: #fcf9f9; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 15;" text="Messagerie Interne" />
                        <Label fx:id="currentUserLabel" style="-fx-text-fill: #6a8a80; -fx-font-size: 12px; -fx-padding: 0 15;" text="Connecté" />
                        <ListView fx:id="userListView" style="-fx-background-color: transparent; -fx-border-color: transparent;" VBox.vgrow="ALWAYS" />
                        <Button fx:id="btnDeconnexion" maxWidth="Infinity" onAction="#onDeconnexion" prefHeight="45.0" style="-fx-background-color: #2a1a1a; -fx-text-fill: #D99177; -fx-border-color: #D99177; -fx-border-width: 1 0 0 0; -fx-cursor: hand; -fx-font-size: 13px;" text="Se déconnecter" />
                    </children>
                </VBox>

                <!-- VBox DROITE -->
                <VBox style="-fx-background-color: #0d0d1a;" HBox.hgrow="ALWAYS">
                    <children>

                        <!-- HEADER -->
                        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="12.0" style="-fx-background-color: #1a1a2e; -fx-padding: 0 20;">
                            <children>
                                <VBox spacing="2.0">
                                    <children>
                                        <Label fx:id="chatTargetLabel" style="-fx-text-fill: #fcf9f9; -fx-font-size: 15px; -fx-font-weight: bold;" text="Sélectionner un utilisateur" />
                                        <Label fx:id="statusTargetLabel" style="-fx-text-fill: #6a8a80; -fx-font-size: 11px;" text="" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- ZONE MESSAGES -->
                        <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background-color: #0d0d1a; -fx-background: #0d0d1a;" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="messagesBox" spacing="10.0" style="-fx-padding: 15; -fx-background-color: #0d0d1a;" />
                            </content>
                        </ScrollPane>

                        <!-- ZONE SAISIE -->
                        <HBox alignment="CENTER" prefHeight="65.0" spacing="10.0" style="-fx-background-color: #1a1a2e; -fx-padding: 10 15;">
                            <children>
                                <TextField fx:id="messageField" onAction="#onEnvoyerMessage" prefHeight="45.0" promptText="Écrire un message..." style="-fx-background-color: #224037; -fx-text-fill: #F2F2F2; -fx-prompt-text-fill: #6a8a80; -fx-background-radius: 22; -fx-padding: 0 15;" HBox.hgrow="ALWAYS">
                                    <font><Font size="14.0" /></font>
                                </TextField>
                                <Button fx:id="btnEnvoyer" onAction="#onEnvoyerMessage" prefHeight="45.0" prefWidth="100.0" style="-fx-background-color: #D99177; -fx-text-fill: #262626; -fx-font-weight: bold; -fx-background-radius: 22; -fx-cursor: hand;" text="Envoyer">
                                    <font><Font size="14.0" /></font>
                                </Button>
                            </children>
                        </HBox>

                    </children>
                </VBox>

            </children>
        </HBox>
    </children>
</StackPane>

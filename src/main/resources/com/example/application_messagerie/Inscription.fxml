<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane
        xmlns="http://javafx.com/javafx/24.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.application_messagerie.client.controller.InscriptionController"
        alignment="CENTER"
        style="-fx-background-color: #0d0d1a;">

    <children>
        <VBox
                maxWidth="420.0"
                prefWidth="420.0"
                spacing="15.0"
                alignment="CENTER"
                style="-fx-background-color: #1a1a2e; -fx-background-radius: 20; -fx-padding: 40;"
                StackPane.alignment="CENTER">
            <children>
                <Text fill="#fcf9f9" strokeType="OUTSIDE" strokeWidth="0.0" text="Créer un compte">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Text>

                <TextField
                        fx:id="usernameField"
                        maxWidth="370.0"
                        prefHeight="55.0"
                        promptText="Nom d'utilisateur"
                        style="-fx-background-color: #224037; -fx-text-fill: #F2F2F2; -fx-background-radius: 10; -fx-padding: 12;">
                    <font>
                        <Font size="16.0" />
                    </font>
                </TextField>

                <PasswordField
                        fx:id="passwordField"
                        maxWidth="370.0"
                        prefHeight="55.0"
                        promptText="Mot de passe"
                        style="-fx-background-color: #224037; -fx-text-fill: #F2F2F2; -fx-background-radius: 10; -fx-padding: 12;">
                    <font>
                        <Font size="16.0" />
                    </font>
                </PasswordField>

                <PasswordField
                        fx:id="confirmPasswordField"
                        maxWidth="370.0"
                        prefHeight="55.0"
                        promptText="Confirmer mot de passe"
                        style="-fx-background-color: #224037; -fx-text-fill: #F2F2F2; -fx-background-radius: 10; -fx-padding: 12;">
                    <font>
                        <Font size="16.0" />
                    </font>
                </PasswordField>

                <Button
                        fx:id="btnRegister"
                        maxWidth="370.0"
                        mnemonicParsing="false"
                        prefHeight="50.0"
                        onAction="#onRegister"
                        style="-fx-background-color: #D99177; -fx-text-fill: #262626; -fx-font-weight: bold; -fx-background-radius: 10;"
                        text="S'inscrire" />

                <Button
                        fx:id="btnRetour"
                        maxWidth="370.0"
                        mnemonicParsing="false"
                        prefHeight="45.0"
                        onAction="#onBackToLogin"
                        style="-fx-background-color: transparent; -fx-text-fill: #D99177; -fx-border-color: #D99177; -fx-border-radius: 10;"
                        text="Retour à la connexion" />

                <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
            </children>
        </VBox>
    </children>
</StackPane>